<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DFS.Views.SignUpCalenderPage"
             xmlns:controls="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar">
    <ContentPage.Content>
        
        <AbsoluteLayout>
        
            <StackLayout
                 AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
                AbsoluteLayout.LayoutFlags="All">
                <StackLayout Margin="0,10,0,0">
                    <Image HeightRequest="25" WidthRequest="25" Source="green_cal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" ></Image>
                </StackLayout>
                
                <ScrollView Margin="0,10,0,0">
                    <controls:Calendar 
                        SelectedDate="{Binding Date}"
                        SpecialDates="{Binding Attendances}"
                        DateCommand="{Binding DateChosen}" 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="StartAndExpand" 
                        x:Name="calendar" />
                </ScrollView>
                
                <Frame WidthRequest="100"                          
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       CornerRadius="10"
                       Margin="0,10,0,0"
                       Padding="0,5"
                       IsVisible="{Binding IsSubmitVisible}"
                       OutlineColor="{StaticResource GreenColor}"
                       x:Name="TrainerFrame"
                       BackgroundColor="{StaticResource GreenColor}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HideCalenderCommand}"/>
                    </Frame.GestureRecognizers>
                    <Label FontAttributes="Bold" FontSize="22" HorizontalTextAlignment="Center" Text="Done" TextColor="{StaticResource BlackColor}"/>
                 </Frame>

                <Frame WidthRequest="100"                          
                       HorizontalOptions="Center"
                       VerticalOptions="StartAndExpand"
                       CornerRadius="10"
                       Margin="0,10,0,0"
                       Padding="0,5"
                       IsVisible="{Binding IsSubmitVisible}"
                       OutlineColor="{StaticResource GreenColor}"

                       BackgroundColor="{StaticResource GreenColor}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ResetCommand}"/>
                    </Frame.GestureRecognizers>
                    <Label FontAttributes="Bold" FontSize="22" HorizontalTextAlignment="Center" Text="Reset" TextColor="{StaticResource BlackColor}"/>
                 </Frame>
                
            </StackLayout>
            
            <StackLayout
                x:Name="OpaqueView"
                IsVisible="{Binding TimeSelectionVisible}"
                AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
                AbsoluteLayout.LayoutFlags="All"
                Opacity="0.2" 
                BackgroundColor="Black">
            </StackLayout>
            
            <StackLayout
                x:Name="TimeView"
                IsVisible="{Binding TimeSelectionVisible}"
                BackgroundColor="{Binding WhiteColor}"
                AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
                AbsoluteLayout.LayoutFlags="All"
                >
                
                
                <StackLayout Margin="30" Spacing="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
                    
                    <StackLayout MinimumHeightRequest="40" HeightRequest="40" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
                        <Label Text="{Binding TimeHeader}" FontAttributes="Bold" FontSize="16" TextColor="Black" VerticalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <ListView BackgroundColor="{StaticResource WhiteColor}" SelectedItem="{Binding RecentlySelectedItem}" ItemSelected="Handle_ItemSelected" ItemsSource="{Binding ListViewData}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <ListView.ItemTemplate>
                          <DataTemplate>
                                <ViewCell>
                                    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{Binding ListItemColor}">
                                        <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="Black" Text="{Binding .}" />
                                    </StackLayout>
                                </ViewCell>
                          </DataTemplate>
                        </ListView.ItemTemplate>
  
                        
                    </ListView>
                    
                    
                </StackLayout>
                
            </StackLayout>
            
            <!--<StackLayout IsVisible="{Binding IsServiceInProgress}"
                             Padding="12"
                     AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
                    AbsoluteLayout.LayoutFlags="All" >
                    
                    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                       <ActivityIndicator IsRunning="true" Color="{StaticResource GreenColor}"/>

                       <Label Text="Loading..." HorizontalOptions="Center" TextColor="{StaticResource GreenColor}"/>
                    </StackLayout>
                </StackLayout>-->
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
